# Test CREATE TABLE with simple schema
statement ok
CREATE TABLE default.default.test_create_simple (
    id INT,
    name STRING
)

# Verify table was created and is empty
query IT rowsort
SELECT * FROM default.default.test_create_simple
----

# Insert data to verify table works
query I
INSERT INTO default.default.test_create_simple VALUES (1, 'test')
----
1

# Verify the insert worked
query IT rowsort
SELECT * FROM default.default.test_create_simple
----
1 test

